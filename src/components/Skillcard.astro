---
export interface Props {
  src: string;
  alt: string;
  name: string;
}
---

<div class="group flex flex-col items-center rounded-lg p-4 md:p-6 bg-black hover:scale-100 transition-all duration-300 shadow-lg hover:shadow-xl transform">
  <div class="w-16 h-16 md:w-24 md:h-24 rounded-full border-4 border-white flex items-center justify-center mb-3 md:mb-4">
    <img src={Astro.props.src} alt={Astro.props.alt} class="w-12 h-12 md:w-20 md:h-20 object-contain group-hover:scale-110 transition-transform duration-300" />
  </div>
  <span class="text-base md:text-lg font-bold group-hover:text-violet-400">{Astro.props.name}</span>
</div>
---
import Baselayout from "../layouts/Baselayout.astro";
---

<Baselayout>

<nav class="container mx-auto p-4 pt-6 font-Passion fixed top-0 left-0 right-0 z-50 transition-all duration-300">
    <div class="md:hidden flex justify-end mb-4">
        <button id="menuButton" class="bg-white text-black rounded-full p-3 shadow-lg shadow-violet-300/50 hover:shadow-violet-400/50 transition-all duration-300">
            <i id="menuIcon" class="fas fa-bars text-2xl text-violet-500 transition-transform duration-300"></i>
        </button>
    </div>
    <div id="menuContent" class="hidden md:flex justify-center items-center gap-4 transition-all duration-300 ease-in-out">
        <div class="md:hidden w-full max-w-sm ml-auto bg-white text-black rounded-2xl p-6 shadow-lg shadow-violet-300/50">
            <div class="flex flex-col space-y-6">
                <a href="index.html" class="font-bold relative group flex items-center gap-3 p-2 hover:bg-violet-50 rounded-lg transition-all duration-300">
                    <i class="fas fa-home text-violet-400 text-xl"></i>
                    <span>Home</span>
                </a>
                <a href="propos.html" class="font-bold relative group flex items-center gap-3 p-2 hover:bg-violet-50 rounded-lg transition-all duration-300">
                    <i class="fas fa-user text-violet-400 text-xl"></i>
                    <span>À propos</span>
                </a>
                <a href="competences.html" class="font-bold relative group flex items-center gap-3 p-2 hover:bg-violet-50 rounded-lg transition-all duration-300">
                    <i class="fas fa-code text-violet-400 text-xl"></i>
                    <span>Compétences</span>
                </a>
                <div class="pt-4 border-t border-gray-200">
                    <a href="#" class="font-bold relative group flex items-center gap-3 p-2 hover:bg-violet-50 rounded-lg transition-all duration-300">
                        <i class="fas fa-file-alt text-violet-400 text-xl"></i>
                        <span>CV</span>
                    </a>
                </div>
            </div>
        </div>     
        <div class="hidden md:flex gap-4">
            <div class="bg-white text-black rounded-lg p-4 flex justify-center items-center space-x-8 shadow-lg shadow-violet-300/50">
                <a href="index.html" class="font-bold relative group flex items-center gap-2 hover:text-violet-500 transition-colors duration-300">
                    <i class="fas fa-home text-violet-400"></i> Home
                </a>
                <a href="propos.html" class="font-bold relative group flex items-center gap-2 hover:text-violet-500 transition-colors duration-300">
                    <i class="fas fa-user text-violet-400"></i> À propos
                </a>
                <a href="competences.html" class="font-bold relative group flex items-center gap-2 hover:text-violet-500 transition-colors duration-300">
                    <i class="fas fa-code text-violet-400"></i> Compétences
                </a>
            </div>
            <div class="bg-white text-black rounded-lg shadow-lg shadow-violet-300/50">
                <a href="#" class="font-bold px-6 py-4 flex items-center gap-2 hover:text-violet-500 transition-colors duration-300">
                    <i class="fas fa-file-alt text-violet-400"></i> CV
                </a>
            </div>
        </div>
    </div>
</nav>

</Baselayout>
          <div class="group flex flex-col items-center rounded-lg p-6 bg-blue-600 hover:bg-blue-500 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
            <div class="w-24 h-24 rounded-full border-4 border-white flex items-center justify-center mb-4">
              <img src={Canva.src} alt="Canva" class="w-20 h-20 object-contain group-hover:scale-110 transition-transform duration-300" />

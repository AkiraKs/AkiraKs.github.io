              <img src={Krita.src} alt="Krita" class="w-20 h-20 object-contain group-hover:scale-110 transition-transform duration-300" />
            </div>
            <span class="text-lg font-bold group-hover:text-yellow-300">Krita</span>
          </div>
          <div class="group flex flex-col items-center rounded-lg p-6 bg-blue-600 hover:bg-blue-500 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
            <div class="w-24 h-24 rounded-full border-4 border-white flex items-center justify-center mb-4">
              <img src={Illustrator.src} alt="Illustrator" class="w-20 h-20 object-contain group-hover:scale-110 transition-transform duration-300" />
            </div>
            <span class="text-lg font-bold group-hover:text-yellow-300">Illustrator</span>
          </div>
          <div class="group flex flex-col items-center rounded-lg p-6 bg-blue-600 hover:bg-blue-500 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
            <div class="w-24 h-24 rounded-full border-4 border-white flex items-center justify-center mb-4">
              <img src={WordPress.src} alt="WordPress" class="w-20 h-20 object-contain group-hover:scale-110 transition-transform duration-300" />
            </div>
            <span class="text-lg font-bold group-hover:text-yellow-300">WordPress</span>
